server {
    listen   80 default_server;
    listen   [::]:80;

    server_name {{ rd_nginx_server_name }};

    return 301 https://$server_name$request_uri;
}

server {
    listen   443 default_server ssl;

    server_name  {{ rd_nginx_server_name }};
    ssl on;
    ssl_certificate {{ rd_nginx_ssl_bundle }};
    ssl_certificate_key {{ rd_nginx_ssl_key }};

    access_log  {{ rd_nginx_accesslog }};

    proxy_redirect                  off;
    proxy_buffering                 off;
    proxy_intercept_errors          off;
    proxy_buffer_size               128k;
    proxy_busy_buffers_size         128k;
    proxy_buffers                   8192 128k;
    proxy_ssl_session_reuse         off;
    proxy_ignore_client_abort       on;

    reset_timedout_connection       on;
    large_client_header_buffers     1024 128k;
    client_max_body_size            4M;
    client_body_buffer_size         4M;
    client_header_buffer_size       128k;
    client_body_in_single_buffer    on;

    proxy_set_header                X-Real-IP  $remote_addr;
    proxy_set_header                X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header                Host $http_host;

    # For CORS Ajax
    proxy_pass_header               Access-Control-Allow-Origin;
    proxy_pass_header               Access-Control-Allow-Methods;
    proxy_hide_header               Access-Control-Allow-Headers;
    add_header                      Access-Control-Allow-Headers 'X-Requested-With, Content-Type';
    add_header                      Access-Control-Allow-Credentials true;

    location = /favicon.ico {
        log_not_found off;
    }

    location / {
        proxy_pass http://127.0.0.1:{{ framework_server_port }};
    }
}
